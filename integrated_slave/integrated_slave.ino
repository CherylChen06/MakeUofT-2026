//        DISPLAY FUNCTIONS
// ==========================================

void showIdleScreen(){
  Serial.println("SLAVE DISPLAY: Idle");
  display.clearDisplay();
  display.drawBitmap(0, 0, idle1, 128, 64, WHITE);
  display.display();
}

void animateIdle() {
  unsigned long currentMillis = millis();

  if (currentMillis - previousMillis >= interval) {
    previousMillis = currentMillis;
    frameCounter = !frameCounter;

    display.clearDisplay();
    if(frameCounter == 0) {
      display.drawBitmap(0, 0, idle1, 128, 64, WHITE);
    } else {
      display.drawBitmap(0, 0, idle2, 128, 64, WHITE);
    }
    display.display();
  }
}

void showConnectedScreen(){
  Serial.println("SLAVE DISPLAY: Connected");
  
  // Show a "ready" message or special graphic
  display.clearDisplay();
  display.setTextSize(2);
  display.setTextColor(WHITE);
  display.setCursor(10, 25);
  display.println("READY!");
  display.display();
  delay(1000);
}

void runAnimation(){
  Serial.println("SLAVE animation running...");
  
  // Play defense animation sequence
  int speed = 300; // Animation speed in milliseconds

  display.clearDisplay();
  display.drawBitmap(0, 0, defense1, 128, 64, WHITE);
  display.display();
  delay(speed);
  
  display.clearDisplay();
  display.drawBitmap(0, 0, defense2, 128, 64, WHITE);
  display.display();
  delay(speed);
  
  display.clearDisplay();
  display.drawBitmap(0, 0, defense3, 128, 64, WHITE);
  display.display();
  delay(speed);

  Serial.println("SLAVE animation complete");
}