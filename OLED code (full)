void setup() {
  Serial.begin(9600);

  // Initialize display
  if(!display.begin(SSD1306_SWITCHCAPVCC, 0x3C)) { 
    Serial.println(F("SSD1306 allocation failed"));
    for(;;);
  }

  display.clearDisplay();

  // Draw the image
  display.drawBitmap(0, 0, myImage, 128, 64, WHITE); 

  display.display(); 
}

void loop() {
}
